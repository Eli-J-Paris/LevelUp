@{
    string typeTask = ViewBag.TypeTask as string;
}
<head>
    <link rel="stylesheet" href="/css/MintTheme.css">

</head>
<div class="col-md-6 offset-lg-3 align-middle">
    <h1 class=" d-flex justify-content-center ">Create Custom Task</h1>
    <form id="NewTaskForm" method="post" action="/tasks/newdaily">

        <div class="d-flex justify-content-center">
            <div style="margin-left:25px; margin-right:25px;">
                <label for="easy">Easy</label>
                <input input class="form-check-input" type="radio" name="Difficulty" id="easy" value="1" checked />
            </div>
            <div style="margin-left:25px; margin-right:25px;">
                <label for="medium">Medium</label>
                <input class ="form-check-input" type="radio" name="Difficulty" id="medium" value="2" />

            </div>
            <div style="margin-left:25px; margin-right:25px;">
                <label for="hard">Hard</label>
                <input class ="form-check-input" type="radio" name="Difficulty" id="hard" />
            </div>

            
        </div>
        <br />
        <div class="d-flex justify-content-center">
            <div style="margin-left:25px; margin-right:25px;">
                <label for="daily">Daily</label>
                <input class="form-check-input" type="radio" onchange="selectDaily(this)" id="daily" name="TaskType" value="Daily" checked />
            </div>
            <div style="margin-left:25px; margin-right:25px;">
                <label for="weekly">Weekly</label>
                <input class="form-check-input" type="radio" onchange="selectWeekly(this)" id="weekly" name="TaskType" value="Weekly" />
            </div>
            <div style="margin-left:25px; margin-right:25px;">
                <label for="todo">ToDo</label>
                <input class="form-check-input" type="radio" onchange="selectToDo(this)" id="todo" name="TaskType" value="ToDo" />
            </div>

        </div>

        <br />
        <div class="form-group">
            <input class="form-control form-control-lg" type="text" id="taskname" name="Title" placeholder="What is your task called. . ." fdprocessedid="wval2n">
        </div>
        <br />
        <div class="form-group">
            <textarea class="form-control" id="description" rows="5" maxlength="255" placeholder="Description" name="Description"></textarea>
        </div>
        <div class="form-group">
            <label for="category" class="form-label mt-4 d-flex justify-content-center">Type of Task</label>
            <select name="Category" id="category"  class="form-select" fdprocessedid="jt9bpd">
                <option value="">--Please choose an option--</option>
                <option value="Hygiene">Hygiene</option>
                <option value="Wellness">Wellness</option>
                <option value="Mindfullness">Mindfulness</option>
                <option value="Productivity">Productivity</option>
                <option value="HabitBuilding">HabitBuilding</option>
            </select>
        </div>
        <br />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success" fdprocessedid="r7n6ym">Create Task</button>
        </div>
       
    </form>

</div>

<script>
    function selectDaily(x) {
        if (x.checked) {
            document.getElementById("NewTaskForm").action = "/tasks/newdaily";
        }
    }
    function selectWeekly(x) {
        if (x.checked) {
            document.getElementById("NewTaskForm").action = "/tasks/newweekly";
        }
    }
    function selectToDo(x) {
        if (x.checked) {
            document.getElementById("NewTaskForm").action = "/tasks/newtodo";
        }
    }


</script>